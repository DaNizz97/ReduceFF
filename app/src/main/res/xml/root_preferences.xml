<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/colors_header">
        <com.skydoves.colorpickerpreference.ColorPickerPreference
            android:key="@string/toolbar_color_picker"
            android:summary="changes background color of main view"
            android:title="Background Color"
            app:preference_attachAlphaSlideBar="true"
            app:preference_attachBrightnessSlideBar="true"
            app:preference_colorBox_radius="18dp"
            app:preference_dialog_negative="cancel"
            app:preference_dialog_positive="confirm"
            app:preference_dialog_title="Toolbar ColorPickerDialog"
            app:preference_selector="@drawable/wheel" />

    </PreferenceCategory>

</PreferenceScreen>